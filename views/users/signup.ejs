<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">
  <h1 class="col-6 offset-3">Sign Up On Wanderlust</h1>
  <div class="col-8 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username">username:</label>
        <input 
        id="username"
         name="username"
          placeholder="enter username"
           type="text" 
           class="form-control"
            required />
        <div class="valid-feedback">looks good</div>
      </div>
     
     

      <div class="mb-3">
        <label for="Email">Email:</label>
        <input id="Email" name="Email" placeholder="enter Email" type="Email" class="form-control" required />
        <div class="valid-feedback">looks good</div>
      </div>
      <div class="mb-3">
        <label for="password">password:</label>
        <input id="password" name="password" placeholder="enter password" type="text" class="form-control" required />
        <div class="valid-feedback">looks good</div>
      </div>
     
         <button class="btn">Sign Up</button>
    </form>
    </div>
    </div>