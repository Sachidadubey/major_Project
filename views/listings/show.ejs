<% layout("/layouts/boilerplate") -%>


  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3 class=" text-align:center"><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-2 show-card shadow-sm rounded-4">
      <!-- Listing Image -->
      <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing image"
        style="max-height: 300px; object-fit: cover;" />

      <!-- Listing Content -->
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %><br>
            â‚¹ <%= listing.price.toLocaleString("en-IN") %><br>
              <%= listing.location %><br>
                <%= listing.country %>
        </p>
      </div>
    </div>

    <!-- Buttons -->
    <div class="btns mt-3 mb-3 offset-4 d-flex gap-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>

      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button class="btn btn-dark delete-btn">Delete</button>
      </form>
    </div>
    <hr/>

    <div class="cols-8 offset-1 mb-3">
      <h4>Leave a review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3 mt-4">
          <label for="rating" class="form-label"></label>
          <input type="range" min="1" max="5" name="review[rating]" class="form-range" >
        </div>
        <div class="mb-3 mt-4">
          <label for="comment" lass="form-label"> </label>
          <textarea name="review[comment]" id="comment" cols="6" rows="5" class="form-control " required></textarea> 
          <div class="invalid-feedback">please submit some comments for review</div>
          <button class="btn  btn-outline-dark mb-2 mt-3">Submit</button>
        </div>
      </form>
    </div>
  </div>